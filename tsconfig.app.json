{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // 1. Soluciona el error 'composite: true'
    "composite": true,
    
    // 2. Soluciona el error de 'noEmit' (lo eliminamos o lo dejamos en false)
    "noEmit": false, 

    // Configuraciones específicas de la aplicación:
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}